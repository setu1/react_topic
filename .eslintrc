root: true
env:
  node: true
  es6: true
extends:
  "airbnb/legacy"
  
rules:
  vars-on-top: 0
  # Warnings
  max-len: [1]
  # Errors
  quotes: [1, "single", { "avoidEscape": true, "allowTemplateLiterals": true }]
  # Temporary Overrides. Remove.
  comma-dangle: [1, "always-multiline"]
  func-names: 0
  no-param-reassign: 0
  space-before-function-paren: 0
  space-before-blocks: 0
  camelcase: 1
  semi: 1
  no-else-return: 1
  no-underscore-dangle: 1
  guard-for-in: 1
  no-restricted-syntax: 1
  no-shadow: 1
  consistent-return: 1
  spaced-comment: 1
  padded-blocks: 1